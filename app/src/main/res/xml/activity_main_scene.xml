<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
    <Constraint android:id="@+id/widget" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ivCloud"
            android:src="@drawable/baseline_cloud_24"
            app:layout_constraintEnd_toEndOf="@id/cl_v_80"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"/>
        <Constraint
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/ivAndroid"
            android:src="@drawable/baseline_android_24"
            app:layout_constraintTop_toBottomOf="@id/cl_h_65"
            app:layout_constraintStart_toStartOf="@id/cl_v_20"
            app:layout_constraintEnd_toEndOf="@id/cl_v_80"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivLeftTopLeaf"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_80"
            app:layout_constraintStart_toStartOf="parent"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivLeftBottomLeaf"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_65"
            app:layout_constraintStart_toStartOf="parent"
            android:rotation="70"
            android:alpha="0"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightTopLeaf1"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="70"
            android:alpha="0"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightTopLeaf2"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="-70"
            android:alpha="0"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightBottomLeaf"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_65"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="70"/>
        <Constraint
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@id/cl_h_80"
            app:layout_constraintStart_toStartOf="@id/cl_v_20"
            app:layout_constraintEnd_toEndOf="@id/cl_v_80"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    <Constraint android:id="@+id/widget" />
        <Constraint
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCloud"
        android:src="@drawable/baseline_cloud_24"
        app:layout_constraintStart_toStartOf="@id/cl_v_20"
        app:layout_constraintTop_toTopOf="@id/cl_h_10"/>
        <Constraint
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/ivAndroid"
            android:src="@drawable/baseline_android_24"
            app:layout_constraintTop_toBottomOf="@id/ivCloud"
            app:layout_constraintEnd_toEndOf="@id/cl_v_80"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivLeftTopLeaf"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"
            app:layout_constraintStart_toStartOf="parent"
            android:rotation="70"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivLeftBottomLeaf"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_65"
            app:layout_constraintStart_toStartOf="parent"
            android:rotation="-70"
            android:alpha="1.2"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightTopLeaf1"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="-70"
            android:alpha="1"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightTopLeaf2"
            android:src="@drawable/leaf"
            android:elevation="@dimen/margin_5dp"
            app:layout_constraintTop_toTopOf="@id/cl_h_30"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="70"
            android:alpha="1.2"/>
        <Constraint
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivRightBottomLeaf"
            android:elevation="@dimen/margin_5dp"
            android:src="@drawable/leaf"
            app:layout_constraintTop_toTopOf="@id/cl_h_65"
            app:layout_constraintEnd_toEndOf="parent"
            android:rotation="-70"/>
        <Constraint
            android:layout_width="250dp"
            android:layout_height="450dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@id/cl_h_30"
            app:layout_constraintStart_toStartOf="@id/cl_v_20"
            app:layout_constraintEnd_toEndOf="@id/cl_v_80"
            app:layout_constraintBottom_toTopOf="@id/cl_h_80"/>


    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:autoTransition="animateToEnd"
        >
        <KeyFrameSet >
            <KeyAttribute
                app:motionTarget="@+id/ivCloud"
                app:framePosition="100"
                android:scaleX="1.5" />
            <KeyCycle
                app:motionTarget="@+id/ivCloud"
                app:framePosition="38"
                app:wavePeriod="1"
                app:waveShape="square"
                android:scaleY="0.2"
                app:waveOffset="1" />
            <KeyCycle
                app:motionTarget="@+id/ivAndroid"
                app:framePosition="0"
                app:wavePeriod="3"
                android:alpha="0.5"
                app:waveOffset="0.5" />


        </KeyFrameSet>

    </Transition>

</MotionScene>